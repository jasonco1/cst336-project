<%- include('partials/header.ejs') %>
<script src="/js/admin.js"></script>
<nav class="navbar navbar-light bg-light">
<a href="/reports">Administrator Reports</a>
</nav>

<h1 class="jumbotron"> Administrator Options</h1>
<div class="container">
    <h2 class="jumbotron">Add New Album to Collection:</h2>
    <form action="#" id="add-form" onsubmit="addAlbum()">
        <div class="form-group">
            <div class="col-xs-4">
               <span class="text-danger" id="title-artist-error"></span>
               <label for="add-title">Album Title:</label>
               <h3 id="validationFdbk" class="bg-danger text-white"></h3>
               <input type="text" class="form-control" id="add-title" name="add-title" placeholder="Enter Album Title" required>
            </div>
            <div class="col-xs-3">
               <label for="add-artist">Artist:</label>
               <h3 id="validationFdbk" class="bg-danger text-white"></h3>
               <input type="text" class="form-control" id="add-artist" name="add-artist" placeholder="Enter artist name">
            </div>
            <div class="col-xs-5">
               <label for="add-coverImage">Image file path:</label>
               <h3 id="validationFdbk" class="bg-danger text-white"></h3>
               <input type="text" class="form-control" id="add-coverImage" name="add-coverImage" placeholder="Enter cover art image URL">
            </div>
            <div class="col-xs-2">
               <label for="add-price">Price:</label>
               <h3 id="validationFdbk" class="bg-danger text-white"></h3>
               <input type="text" class="form-control col-xs-2" id="add-price" name="add-price" placeholder="Enter price">
            </div>
            <div class="col-xs-2">
               <label for="add-genre">Genre:</label>
               <h3 id="validationFdbk" class="bg-danger text-white"></h3>
               <input type="text" class="form-control" id="add-genre" name="add-genre" placeholder="Enter music genre">
            </div>
            <div class="col-xs-2">
               <label for="add-tag1">Tag 1:</label>
               <h3 id="validationFdbk" class="bg-danger text-white"></h3>
               <input type="text" class="form-control" id="add-tag1" name="add-tag1" placeholder="Enter tag 1">
            </div>
            <div class="col-xs-2">
               <label for="add-tag2">Tag 2:</label>
               <h3 id="validationFdbk" class="bg-danger text-white"></h3>
               <input type="text" class="form-control" id="add-tag2" name="add-tag2" placeholder="Enter tag 2">
            </div>
            <button type="submit" class="btn btn-primary btn-success">Add Album</button>
        </div>
    </form>
</div>
<hr />

<div class="container">
    <h2 class="jumbotron"> Update an Album </h2>
    <div>
        <input type="text" id="updateAlbum" placeholder="Enter Album ID">  <br /><br />
        <span id="updateResult"></span>
    </div>
</div>

<div class="container">
    <form id="update-form" action="/admin">
        <div class="form-group">
            <div class="col-xs-4">
                <label for="update-title">Album Title:</label>
                <h3 id="validationFdbk" class="bg-danger text-white"></h3>
                <input type="text" class="form-control" id="update-title" name="update-title" 
                    placeholder="Enter Album Title">
            </div>
            <div class="col-xs-3">
                <label for="update-artist">Artist:</label>
                <h3 id="validationFdbk" class="bg-danger text-white"></h3>
                <input type="text" class="form-control" id="update-artist" name="update-artist" 
                    placeholder="Enter artist name">
            </div>
            <div class="col-xs-5">
                <label for="update-coverImage">Image file path:</label>
                <h3 id="validationFdbk" class="bg-danger text-white"></h3>
                <input type="text" class="form-control" id="update-coverImage" name="update-coverImage" 
                    placeholder="Enter cover art image">
            </div>
            <div class="col-xs-2">
                <label for="update-price">Price:</label>
                <h3 id="validationFdbk" class="bg-danger text-white"></h3>
                <input type="text" class="form-control col-xs-2" id="update-price" name="update-price" 
                    placeholder="Enter price">
            </div>
            <div class="col-xs-2">
                <label for="update-genre">Genre:</label>
                <h3 id="validationFdbk" class="bg-danger text-white"></h3>
                <input type="text" class="form-control" id="update-genre" name="update-genre" 
                    placeholder="Enter music genre">
            </div>
            <div class="col-xs-2">
               <label for="update-tag1">Tag 1:</label>
               <h3 id="validationFdbk" class="bg-danger text-white"></h3>
               <input type="text" class="form-control" id="update-tag1" name="update-tag1" 
                    placeholder="Enter tag 1">
            </div>
            <div class="col-xs-2">
               <label for="update-tag2">Tag 2:</label>
               <h3 id="validationFdbk" class="bg-danger text-white"></h3>
               <input type="text" class="form-control" id="update-tag2" name="update-tag2" 
                    placeholder="Enter tag 2">
            </div>
            <button type="submit" id="updateAlbumAttributes" class="btn btn-primary btn-success">Update Album </button>
        </div>
    </form>
</div>
<hr />
<div class="container">
   <h2 class="jumbotron">Delete an Album:</h2>
   <form id="delete-form" action="/admin">
      <div class="form-group col-xs-2">
         <label for="delete-album">Album ID:</label>
         <h3 id="validationFdbk" class="bg-danger text-white"></h3>
            <input type="text" class="form-control" id="delete-album" name="delete-album" 
                placeholder="Enter Album ID to delete">
      </div>
      <button type="submit" class="btn btn-primary btn-danger">Delete Album</button>
   </form>
</div>
<%- include('partials/footer.ejs') %>