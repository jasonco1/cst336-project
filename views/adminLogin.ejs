<%- include('partials/header.ejs') %>
    <div class="ls-box">
        <h3> Admin Log-In </h3>
        <form id="admin-login-form" method="POST" action="/">
            <span>Enter your username</span>
            <br />
            <input class="textbox" type="text" id="login-admin" name="adminuser" placeholder="admin">  
            <br />
            <span>Enter your password</span>
            <br>
            <input class="textbox" type="password" id="admin-pswd" name="adminpwd">  
            <br />
            <span class="text-danger" id="admin-login-error"> </span>
            <br />
            <div class="text-center">
                <input class="btn bg-warning text-dark" id="btn-admin-login" type="submit" value="Log In">
            </div>
            <br />
        </form>
        
        <!--Displays error when not signed in-->
        <% if (typeof loginError != "undefined" && loginError) { %>
            <h4 class="error text-danger">Wrong credentials</h4>
        <% } %>
    </div>
    <br /><br />
<%- include('partials/footer.ejs') %>